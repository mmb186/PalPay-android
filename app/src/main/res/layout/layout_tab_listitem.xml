<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/tab_parent_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Tab Name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tab_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:textStyle="bold"
                android:text="PENDING"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>

    <org.fabiomsr.moneytextview.MoneyTextView
        android:id="@+id/tab_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        app:amount="32.56"
        app:baseTextSize="20sp"
        app:decimalDigitsTextSize="17sp"
        app:decimalMargin="6dp"
        app:includeDecimalSeparator="false"
        app:symbol="$"
        app:symbolGravity="start|top"
        app:symbolMargin="6dp"
        app:symbolTextSize="14sp" />

</RelativeLayout>